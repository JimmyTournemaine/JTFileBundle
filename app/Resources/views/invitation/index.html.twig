{% extends 'base.html.twig' %}
{% import "invitation/macro_invitation.html.twig" as macros %}
{% block title %}{{ 'invitation.index.title'|trans }}{% endblock %}
{% block body %}
    <h1>{{ 'invitation.index.title'|trans }}</h1>

    <table>
        <thead>
            <tr>
                <th>Team</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        	{% for invitation in invitations %}
            	{{ macros.invitation(invitation, 'user') }}
            {% else %}
            	<tr><td>{{ 'invitation.index.none'|trans }}</td></tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
