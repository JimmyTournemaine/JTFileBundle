{% extends 'base.html.twig' %}

{% block body %}
    <h1>Meeting</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meeting.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ meeting.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ meeting.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ meeting.description }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if meeting.start %}{{ meeting.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if meeting.end %}{{ meeting.end|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Allday</th>
                <td>{% if meeting.allDay %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('meeting_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('meeting_edit', { 'id': meeting.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
